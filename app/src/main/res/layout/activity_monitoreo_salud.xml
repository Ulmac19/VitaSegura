<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <ImageView
                android:id="@+id/iv_back_salud"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/atras"
                app:tint="#80C7DE" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Monitoreo de \nSalud"
            android:textColor="#23608C"
            android:textSize="36sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pulso Cardiaco"
            android:textColor="#80C7DE"
            android:layout_marginStart="20dp"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tv_bpm_actual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actual: -- BPM"
            android:textColor="#7DB9A9"
            android:textSize="18sp"
            android:layout_marginStart="20dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_pulso"
            android:layout_width="350dp"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="#E1F5FE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OxigenaciÃ³n en Sangre"
            android:textColor="#80C7DE"
            android:layout_marginStart="20dp"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tv_oxigenacion_actual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actual: -- %"
            android:textColor="#7DB9A9"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_oxigeno"
            android:layout_width="350dp"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="#E1F5FE" />

    </LinearLayout>
</ScrollView>