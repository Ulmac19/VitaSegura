<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENVIANDO ALERTA..."
        android:textColor="@color/rojo"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Se notificará a tu familiar/cuidador en:"
        android:textColor="@color/azul_oscuro"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginBottom="40dp" />

    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/blanco"
        android:elevation="4dp"
        android:layout_marginBottom="60dp">

        <TextView
            android:id="@+id/tv_contador_emergencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="5"
            android:textColor="@color/rojo"
            android:textSize="120sp"
            android:textStyle="bold" />
    </FrameLayout>

    <android.widget.Button
        android:id="@+id/btn_cancelar_alerta"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/boton_primario"
        app:backgroundTint="#23608C"
        android:text="¡FUE UN ERROR!\nCANCELAR"
        android:textAllCaps="false"
        android:textColor="@color/blanco"
        android:textSize="22sp"
        android:textStyle="bold" />

</LinearLayout>