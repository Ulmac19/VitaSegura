<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/gris_claro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:id="@+id/iv_back_form"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:src="@drawable/atras"
            app:tint="@color/azul_claro" />

        <TextView
            android:id="@+id/tv_titulo_formulario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:text="Agregar Nuevo\nRecordatorio"
            android:textAlignment="center"
            android:textColor="@color/azul_oscuro"
            android:textSize="32sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            <EditText
                android:id="@+id/et_nombre"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:hint="Nombre del medicamento"
                android:paddingStart="16dp"
                android:textColor="@color/azul_oscuro" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            <EditText
                android:id="@+id/et_frecuencia"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:hint="Frecuencia"
                android:paddingStart="16dp"
                android:textColor="@color/azul_oscuro" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            <EditText
                android:id="@+id/et_hora"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:hint="Hora de toma"
                android:paddingStart="16dp"
                android:textColor="@color/azul_oscuro" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            <EditText
                android:id="@+id/et_dosis"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:hint="Dosis"
                android:paddingStart="16dp"
                android:textColor="@color/azul_oscuro" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            <EditText
                android:id="@+id/et_notas"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:hint="Notas"
                android:paddingStart="16dp"
                android:textColor="@color/azul_oscuro" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_accion"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:background="@drawable/boton_primario"
            android:text="Agregar"
            android:textAllCaps="false"
            android:textColor="@color/blanco"
            android:textSize="18sp"
            app:backgroundTint="@color/azul_oscuro" />

    </LinearLayout>
</ScrollView>