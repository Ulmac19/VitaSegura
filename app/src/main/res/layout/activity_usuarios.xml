<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_claro">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/iv_back_usuarios"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/atras"
            app:tint="@color/azul_claro" />

        <ImageView
            android:id="@+id/iv_agregar_usuario"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/agregar_usuario"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_navegacion"
        android:layout_below="@id/rl_header"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="24dp">

        <TextView
            android:id="@+id/tv_titulo_pantalla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Información"
            android:textColor="@color/azul_oscuro"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/usuario" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            <TextView
                android:id="@+id/tv_nombre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:textColor="@color/azul_oscuro"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            <TextView
                android:id="@+id/tv_correo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:textColor="@color/azul_oscuro"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            <TextView
                android:id="@+id/tv_telefono"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:textColor="@color/azul_oscuro"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_cambiar_pass"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/boton_primario"
            android:text="Cambiar Contraseña"
            android:textAllCaps="false"
            android:textColor="@color/blanco"
            android:textSize="16sp"
            app:backgroundTint="@color/azul_oscuro" />

        <Button
            android:id="@+id/btn_eliminar_usuario"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/boton_primario"
            android:text="Eliminar Usuario"
            android:textAllCaps="false"
            android:textColor="@color/blanco"
            android:textSize="16sp"
            android:visibility="gone"
            app:backgroundTint="#FF6B6B" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_navegacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="26dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp">

        <Button
            android:id="@+id/btn_anterior"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="Anterior\nUsuario"
            android:textAllCaps="false"
            android:textColor="@color/blanco"
            android:textSize="14sp"
            app:backgroundTint="@color/azul_oscuro"
            app:icon="@drawable/atras"
            app:iconGravity="textStart"
            app:iconSize="28dp"
            app:iconTint="@color/blanco" />

        <Button
            android:id="@+id/btn_siguiente"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="Siguiente\nUsuario"
            android:textAllCaps="false"
            android:textColor="@color/blanco"
            android:textSize="14sp"
            app:backgroundTint="@color/azul_oscuro"
            app:icon="@drawable/adelante"
            app:iconGravity="textEnd"
            app:iconSize="28dp"
            app:iconTint="@color/blanco" />
    </LinearLayout>

</RelativeLayout>