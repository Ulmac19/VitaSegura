<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_back_arrow"
        app:tint="#80C7DE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Información"
            android:textColor="#23608C"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/ic_profile"
            android:padding="1px"
            app:tint="#FFFFFF"
            android:layout_marginBottom="30dp" />

        <TextView
            android:id="@+id/tv_info_nombre"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_bg"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="Ulises Alberto Macías Ramírez"
            android:textColor="#23608C"
            android:textSize="14sp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/tv_info_correo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_bg"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="a22300928@ceti.mx"
            android:textColor="#23608C"
            android:textSize="14sp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/tv_info_telefono"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_bg"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="33-12-34-56-78"
            android:textColor="#23608C"
            android:textSize="14sp"
            android:layout_marginBottom="30dp" />

        <android.widget.Button
            android:id="@+id/btn_cambiar_pass_perfil"
            android:layout_width="174dp"
            android:layout_height="53dp"
            android:background="@drawable/boton_primario"
            app:backgroundTint="#23608C"
            android:text="Cambiar\nContraseña"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>