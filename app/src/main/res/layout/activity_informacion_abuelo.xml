<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <ImageView
                android:id="@+id/iv_back_salud"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/atras"
                app:tint="#80C7DE" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_titulo_monitoreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monitoreo de \nSalud"
            android:textColor="#23608C"
            android:textSize="36sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pulso Cardíaco y Oxigenación en Sangre"
            android:textColor="#80C7DE"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_actual_bpm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Actual: -- BPM"
                android:textColor="#7DB9A9"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_actual_oxigeno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Actual: -- %"
                android:textColor="#7DB9A9"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promedio Diario (30 días)"
            android:textColor="#23608C"
            android:layout_marginStart="20dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_diario"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:background="#E1F5FE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promedio Semanal (4 sem)"
            android:textColor="#23608C"
            android:layout_marginStart="20dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart_semanal"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:background="#E1F5FE" />

    </LinearLayout>
</ScrollView>